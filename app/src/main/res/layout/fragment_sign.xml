<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_sign"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/colorTransparent"
        app:cardCornerRadius="14dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.88">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_start_background"
            android:padding="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_sign_account"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/layout_main_edit"
                android:paddingHorizontal="12dp"
                app:layout_constraintBottom_toTopOf="@id/layout_sign_password"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9">

                <ImageView
                    android:id="@+id/image_sign_account"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_account_start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edit_sign_account"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@null"
                    android:inputType="text"
                    android:maxEms="16"
                    android:singleLine="true"
                    android:textColor="@color/colorMainWhite"
                    android:textCursorDrawable="@drawable/layout_cursor"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.6"
                    app:layout_constraintLeft_toRightOf="@id/image_sign_account"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_sign_password"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/layout_main_edit"
                android:paddingHorizontal="12dp"
                app:layout_constraintBottom_toTopOf="@id/layout_sign_confirm"
                app:layout_constraintLeft_toLeftOf="@id/layout_sign_account"
                app:layout_constraintRight_toRightOf="@id/layout_sign_account"
                app:layout_constraintTop_toBottomOf="@id/layout_sign_account"
                app:layout_constraintWidth_percent="0.9">

                <ImageView
                    android:id="@+id/image_sign_password"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_password"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edit_sign_password"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:maxEms="16"
                    android:singleLine="true"
                    android:textColor="@color/colorMainWhite"
                    android:textCursorDrawable="@drawable/layout_cursor"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.6"
                    app:layout_constraintLeft_toRightOf="@id/image_sign_password"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_sign_confirm"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/layout_main_edit"
                android:paddingHorizontal="12dp"
                app:layout_constraintBottom_toTopOf="@id/layout_sign"
                app:layout_constraintLeft_toLeftOf="@id/layout_sign_account"
                app:layout_constraintRight_toRightOf="@id/layout_sign_account"
                app:layout_constraintTop_toBottomOf="@id/layout_sign_password"
                app:layout_constraintWidth_percent="0.9">

                <ImageView
                    android:id="@+id/image_sign_confirm"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_password"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edit_sign_confirm"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:maxEms="16"
                    android:singleLine="true"
                    android:textColor="@color/colorMainWhite"
                    android:textCursorDrawable="@drawable/layout_cursor"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.6"
                    app:layout_constraintLeft_toRightOf="@id/image_sign_confirm"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_sign"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/layout_main_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@id/layout_sign_account"
                app:layout_constraintTop_toBottomOf="@id/layout_sign_confirm"
                app:layout_constraintWidth_percent="0.4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign"
                    android:textColor="@color/text_login_create"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_sign_create"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingHorizontal="8dp"
                app:layout_constraintBottom_toBottomOf="@id/layout_sign"
                app:layout_constraintLeft_toLeftOf="@id/layout_sign_account"
                app:layout_constraintTop_toTopOf="@id/layout_sign">

                <ImageView
                    android:id="@+id/image_sign_create"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_to_login"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHeight_percent="0.6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_toLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/to_login"
                    android:textColor="@color/text_login_create"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/image_sign_create"
                    app:layout_constraintLeft_toRightOf="@id/image_sign_create"
                    app:layout_constraintTop_toTopOf="@id/image_sign_create" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>